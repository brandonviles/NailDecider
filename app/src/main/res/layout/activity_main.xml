<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purple"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/deciderLbl" android:textSize="36sp"
            android:fontFamily="@font/aldrich" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/logoImg"/>
    <ImageView
            android:layout_width="142dp"
            android:layout_height="141dp" app:srcCompat="@drawable/logo"
            android:id="@+id/logoImg"
            tools:srcCompat="@drawable/logo" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="204dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              tools:layout_editor_absoluteY="409dp" tools:layout_editor_absoluteX="461dp" android:id="@+id/textView"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/newColorTxt"
            android:inputType="text" android:hint="add a new color..." android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/addColorBtn"/>
    <Button
            android:text="Button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/addColorBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="92dp" app:layout_constraintBottom_toTopOf="@+id/decideBtn"
            app:layout_constraintHorizontal_bias="0.498" style="@style/Widget.AppCompat.Button.Colored"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/decideBtn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" style="@style/Widget.AppCompat.Button.Colored"/>

</android.support.constraint.ConstraintLayout>